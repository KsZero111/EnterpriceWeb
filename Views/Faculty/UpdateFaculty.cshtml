@model EnterpriceWeb.Models.Faculty

@{
    ViewData["Title"] = "UpdateFaculty";
}

<h1>UpdateFaculty</h1>

<h3>Faculty</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateFaculty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="f_id" />
            <div class="form-group">
                <label asp-for="f_name" class="control-label">Faculty Name</label>
                <input asp-for="f_name" class="form-control" name="ip_name" />
                <span asp-validation-for="f_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexFaculty">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
