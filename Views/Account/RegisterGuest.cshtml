@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    @model EnterpriceWeb.Models.User
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Registration Form</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EnterpriceWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/  css/all.css">
    <link href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css2?family=Poppins&display=swap' rel='stylesheet'>

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mdb.min.css" asp-append-version="true" />
    <link href="~/css/Register.css" rel="stylesheet" type="text/css" />
    <style> 
        .panel-body {
            padding: 1rem;
        }

        .input-field {
            margin-bottom: 1rem;
        }
    </style>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script type='text/javascript' src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js'></script>
    <script type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js'></script>
</head>
<body style="margin-top:1em" oncontextmenu='return false' class='snippet-body'>
    <div>
        <div class="row">
            <div class="offset-md-2 col-lg-5 col-md-7 offset-lg-4 offset-md-3">
                <div class="panel border bg-white">
                    <div class="panel-heading">
                        <h3 class="pt-3 font-weight-bold">Register</h3>
                    </div>
                    <div class="panel-body">
                        <form id="btn-register" asp-controller="Account" asp-action="Register" method="POST" enctype="multipart/form-data">
     
                            <div class="form-group">
                                <div class="input-field"> <span class="far fa-user p-2"></span> <input class="form-control" type="text" placeholder="User Name" name="us_name" required> </div>
                            </div>
                            <div class="form-group">
                                <div class="input-field"> <span class="fas fa-key px-2"></span> <input class="form-control" type="password" placeholder="Password" name="us_password" required> </div>
                            </div>
                          
                            <div class="mb-3">
                                <label for="formFileMultiple" class="form-label">Avatar</label>
                                <input class="form-control input-field" type="file" id="formFileMultiple" name="image" required>
                            </div>
                            <div class="form-group">
                                <div class="input-field"> <span class="fas fa-phone px-2"></span> <input class="form-control" type="text" placeholder="Phone" name="us_phone" required> </div>
                            </div>
                            <div class="form-group">
                                <div class="input-field"> <span class="far fa-envelope p-2 "></span> <input class="form-control" type="email" placeholder="Email" name="us_gmail" class="form-control  border-0" required> </div>
                            </div>
                            <div class="form-group">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label">Gender</label>
                                        <select asp-for="us_gender" class="form-control">
                                            <option value="male" name="us_gender">Male</option>
                                            <option value="female" name="us_gender">Female</option>
                                        </select>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="input-field"> <span class="far fa-calendar-alt p-2"></span> <input class="form-control" type="text" placeholder="Start Year" name="us_start_year" required> </div>
                            </div>
                            <div class="form-group">
                                <div class="input-field"> <span class="far fa-calendar-alt p-2"></span> <input class="form-control" type="text" placeholder="End Year" name="us_end_year" required> </div>
                            </div>
                            @if (TempData["erorr"] != null)
                            {
                                <div class="form-group checktype">
                                    <p>@TempData["erorr"]</p>

                                </div>
                            }
                            <button style="width:100%" type="submit" class="btn btn-primary btn-block mt-3">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type='text/javascript'></script>
</body>
</html>
<script>
    $("#btn-register").submit(function (e) {
        e.preventDefault()
        var formData = new FormData(this);

        $.ajax({
            type: "POST",
            url: "http://localhost:5154/Account/RegisterGuest",
            data: formData,
            contentType: false,
            processData: false,
            success: function () {
                window.location.href = "http://localhost:5154/Account/Login"
            },
            error: function () {
            }
        });
    });


</script>
