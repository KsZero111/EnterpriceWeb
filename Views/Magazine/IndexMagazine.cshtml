@model IEnumerable<EnterpriceWeb.Models.Magazine>

@{
    ViewData["Title"] = "IndexMagazine";
}

<h1>IndexMagazine</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Magazine Closure Date
            </th>
            <th>
                Final Closure Date
            </th>
            <th>
                Title
            </th>
            <th>
                Academic_year
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_closure_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_final_closure_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_academic_year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_status)
                </td>
                <td>
                    <a asp-action="ContributeMagazine" asp-route-id="@item.magazine_id">Contribute</a>|
                    <a asp-action="UpdateMagazine" asp-route-id="@item.magazine_id">Edit</a> |
                    <a asp-action="DetailsMagazine" asp-route-id="@item.magazine_id">Details</a> |
                    <a asp-action="DeleteMagazine" asp-route-id="@item.magazine_id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
