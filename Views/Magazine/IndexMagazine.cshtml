@model IEnumerable<EnterpriceWeb.Models.Magazine>

@{
    ViewData["Title"] = "IndexMagazine";
}


<div class="position-relative">
    
    <div class="position-absolute top-50 start-50 translate-middle"> <h1 >IndexMagazine</h1></div>
</div>

<p class="my-5">
    <a asp-action="CreateMagazine" class="btn btn-outline-info">Create New</a>
</p>

<table class="table  table-success table-striped ">
    <thead>
        <tr> 
            <th>
                Magazine
            </th>
            <th>
                Final Closure Date
            </th>
            <th>
                Title
            </th>
            <th>
                Academic_year
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_closure_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_final_closure_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.magazine_academic_year)
                </td>
                <td>
                    <a asp-controller="Article" asp-action="IndexArticle" asp-route-id="@item.magazine_id" class="btn btn-outline-primary">Contribute</a>|
                    <a asp-action="UpdateMagazine" asp-route-id="@item.magazine_id" class="btn btn-outline-success">Edit</a> |
                    <!-- Modal -->
                    <button class="btn btn-danger DeleteArticleFile" data-toggle="modal" data-target="#deleteModal">Delete</button>
                    <form enctype="multipart/form-data" id="form_Delete_ArticleFile">
                        <input type="hidden" value="@item.magazine_id" name="id" />
                        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header d-block">
                                        <h4 class="modal-title" id="deleteModalLabel">Click on the box below to delete an article</h4>
                                        <h7 class="modal-title text-danger">* This action will delete all file contribution in the article</h7>
                                    </div>
                                    <div class="modal-footer">

                                        <button type="button" class="btn btn-secondary cancelDelete" data-dismiss="modal">Cancel</button>
                                        <button class="btn btn-danger confirmDelete">OK</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {

    <script>
        $(document).ready(function () {
            //Delete magazine
            $(".DeleteArticleFile").click(function () {
                var modalId = $(this).data("target");
                $(modalId).modal("show");
            });

            $(".confirmDelete").click(function () {
                $(this).closest(".modal").modal("hide");
            });

            $(".cancelDelete").click(function () {
                $(".confirmDelete").closest(".modal").modal("hide");
            });

            $("#form_Delete_ArticleFile").submit(function (e) {
                e.preventDefault()
                var formData = new FormData(this);

                $.ajax({
                    type: "POST",
                    url: "http://localhost:5154/Magazine/DeleteMagazine",
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function () {
                        location.reload()
                        console.log("Create successful");
                    },
                    error: function () {
                        console.log("Error creating article file");
                    }
                });
            });


        });
    </script>
}