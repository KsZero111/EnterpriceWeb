@model EnterpriceWeb.Models.Article

@{
    ViewData["Title"] = "CreateArticle";
}

<h1>CreateArticle</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateArticle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" type="hidden">
                <input type="hidden" name="magazine_id" value="@ViewBag.Magazine.magazine_id" />
            </div>
            <div class="form-group">
                <label asp-for="article_title" class="control-label">Title</label>
                <input asp-for="article_title" class="form-control" />
                <span asp-validation-for="article_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="avatarArticle">Avatar</label>
                <input class="form-control" type="file" data-val="true" data-val-required="Article avatar not empty" id="avatarArticle" name="avatarArticle" value="">
                <span class="text-danger field-validation-valid" data-valmsg-for="avatarArticle" data-valmsg-replace="true"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
