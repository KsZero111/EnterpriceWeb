@model EnterpriceWeb.Models.Article

@{
    ViewData["Title"] = "UpdateArticle";
}

<h1>UpdateArticle</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateArticle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="article_id" />
            <input type="hidden" asp-for="us_id" />
           
            <div class="form-group">
                <label asp-for="article_title" class="control-label">Title</label>
                <input asp-for="article_title" class="form-control" />
                <span asp-validation-for="article_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Avatar</label>
                <input type="file" name="avatar" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexArticle" asp-route-id="@Model.article_id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
