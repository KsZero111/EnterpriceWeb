@model EnterpriceWeb.Models.User

@{
    ViewData["Title"] = "Index Profile";
    Layout = ViewBag.layout;
}

@section Style {
    <link href="~/css/profile.css" rel="stylesheet" type="text/css" />
}

<a class=" btn btn-outline-info" asp-action="ChangesPassword" asp-controller="Account" asp-route-id=@Model.us_id>ChangesPassword</a>
<div class="page-content page-container" id="page-content">
    <div class="padding">
        @* <a class=" btn btn-primary" asp-controller="Profile" asp-action="UpdateProfile" rou style="margin: 0px 0px 20px 25px"> Edit profile</a> *@
        <div class="row container d-flex justify-content-center">
            <div class="">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img style="height:260px" src="http://localhost:5154/image/User/@Model.us_image" class="img-radius" alt="User-Profile-Image">
                                </div>
                                <h5 class="f-w-600">I am @Model.us_name</h5>
                                <h6 class="f-w-600">Role @Model.us_role</h6>

                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">@Model.us_gmail</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Faculty</p>
                                        <h6 class="text-muted f-w-400">@Model.faculty.f_name </h6>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone</p>
                                        <h6 class="text-muted f-w-400">@Model.us_phone</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Gender</p>
                                        <h6 class="text-muted f-w-400">@Model.us_gender</h6>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Start year</p>
                                        <h6 class="text-muted f-w-400">@Model.us_start_year</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">End year</p>
                                        <h6 class="text-muted f-w-400">@Model.us_end_year</h6>
                                    </div>
                                </div>
                            </div>
                            <ul class="social-link list-unstyled m-t-40 m-b-10">
                                <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
